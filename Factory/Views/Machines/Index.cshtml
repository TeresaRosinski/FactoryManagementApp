@{
  Layout="_Layout";
}
@using Factory.Models; 
@model List<Factory.Models.Machine>; 

<div class = "jumbotron"> 
  <h2 class="display-4"> All Current Machines </h2> 
</div>

@if (@Model.Count == 0 )
{
  <h2>No Machines Are Currently In The Databse</h2>
}

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Date Added</th>
      <th scopre="col">Delete</th>
      <th scope="col">Edit</th>      
    </tr>
  </thead>
  <tbody>
    @foreach(Machine machine in Model)
      {
      <tr class="table-default">
        <th scope="row">@Html.ActionLink(@machine.Name, "Details", new {id = machine.MachineId})</th>
        <td>@machine.Description</td>
        <td>@machine.DatePurchased.ToShortDateString()</td>
        <td>@Html.ActionLink($"Delete", "Delete", new {id = machine.MachineId})</td>
        <td>@Html.ActionLink($"Edit", "Edit", new {id = machine.MachineId})</td>
    </tr>
      }
  </tbody>
</table>

<button class = "btn btn-secondary">@Html.ActionLink("Add A New Machine","Create")</button>