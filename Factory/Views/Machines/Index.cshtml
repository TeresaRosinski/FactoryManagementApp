@{
  Layout="_Layout"
}
@using Factory.Models; 
@model List<Factory.Models.Machine>; 

<div class = "jumbotron"> 
  <h1 class="display-3"> All Current Machines </h1> 
</div>

@if (@Model.Count == 0 )
{
  <h2>No Machines Are Currently In The Databse</h2>
}

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Date Added</th>
      <th scope="col">Edit</th>
    </tr>
  </thead>
  <tbody>
    @foreach(Machine machine in Model)
      {
      <tr class="table-default">
        <th scope="row">@machine.Name</th>
        <td>@machine.Description</td>
        <td>@machine.DatePurchased</td>
        <td>@Html.ActionLink($"Delete", "Delete", new {id = machine.MachineId})</td>
        <td>@Html.ActionLink($"Edit", "Edit", new {id = machine.MachineId})</td>
    </tr>
      }
  </tbody>
</table>