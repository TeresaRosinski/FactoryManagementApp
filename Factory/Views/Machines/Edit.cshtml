@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class = "jumbotron"> 
  <h2 class="display-4"> Edit </h2> 
</div>

<h4>Edit: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{

    @Html.HiddenFor(model => model.MachineId)
 
    @Html.LabelFor(model => model.Name) <br>
    @Html.EditorFor(model => model.Name) <br>

    @Html.LabelFor(model => model.Description)<br>
    @Html.EditorFor(model => model.Description) <br>

    @Html.LabelFor(model => model.DatePurchased) <br>
    @Html.EditorFor(model => model.DatePurchased)
    <input type="submit" value="Save" />
}
